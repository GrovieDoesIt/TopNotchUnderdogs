@model IEnumerable<BusinessLogicLayer.MixtapeStatistics>

@{
    ViewBag.Title = "Statistics";
}

<h2>Statistics</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ArtistName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalSongsByArtist)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalLengthByArtist)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MixtapeAvgLengthByArtist)
        </th>
