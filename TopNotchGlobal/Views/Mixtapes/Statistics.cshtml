    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ArtistName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalSongsByArtist)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalLengthByArtist)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MixtapeAvgLengthByArtist)
